<header class="header" id="top">
    <div class="l-constraint">
        <div class="header-inner">
            <a href="/" class="header-logo">
                Helt Enkle Nettsider
            </a>
            <nav class="header-nav">
                {% if siteHeader.navigation %}
                    <ul>
                        {% for item in siteHeader.navigation %}
                            <li>
                                <a href="#">{{ item.linkText }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </nav>
            <button class="header-menu-toggle">
                <span class="header-menu-toggle-text">Meny</span>
                <span class="header-menu-toggle-icon" aria-hidden="true">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path fill="none" d="M0 0h24v24H0z"/><path fill="currentColor" d="M12 16l-6-6h12z"/>
                    </svg>
                </span>
            </button>
        </div>
    </div>
</header>
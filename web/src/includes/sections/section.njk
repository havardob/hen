<section class="section{% if section.darkTheme %} | dark{% endif %} ">
    <div class="constraint{% if section.isNarrow %} | narrow{% endif %}">
        <h2 class="section-title">
            {{ section.title }}
        </h2>
        {% if section.content %}
            <div class="section-content | rich-text">
                {{ section.content | safe }}
            </div>
        {% endif %}
        {% if section._type == "showcaseSection" %}
            {% include 'sections/showcase.njk' %}
        {% endif %}
        {% if section._type == "perksSection" %}
            {% include 'sections/perks.njk' %}
        {% endif %}
        {% if section._type == "pricingSection" %}
            {% include 'sections/pricing.njk' %}
        {% endif %}
    </div>
    {% if section.buttons.length > 0 %}
        <div class="cta-group {{ " | centered" if section.buttonsAlignmentCenter }}">
            {% for button in section.buttons %}
                <a href="{% if button.linkType == "isInternal" %}/{{ button.internalUrl.slug.current }}{% endif %}{% if button.linkType == "isExternal" %}{{ button.externalUrl }}{% endif %}" class="cta{{ " | primary" if button.isPrimary }}">
                    <span>{{ button.linkText }}</span>
                    {% if button.linkIcon %}
                        {% include "icons/" + button.linkIcon + ".svg" ignore missing %}
                    {% endif %}
                </a>
            {% endfor %}
        </div>
    {% endif %}
</section>
<header class="header" id="top">
    <div class="constraint">
        <div class="header-inner">
            <div class="header-logo">  
                <a href="/">
                    Helt enkle<br/>
                    nettsider
                </a> 
            </div>
            <nav class="header-nav">
                {% if siteHeader.navigation %}
                <ul>
                    {% for item in siteHeader.navigation %}
                    <li>
                        <a href="#">{{ item.linkText }}</a> 
                    </li> 
                    {% endfor %}  
                </ul> 
                {% endif %}
            </nav> 
            <button class="header-mobile-button">
                <i class="header-mobile-button-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                        <path fill="none" d="M0 0h24v24H0z" />
                        <path fill="currentColor" d="M3 4h18v2H3V4zm6 7h12v2H9v-2zm-6 7h18v2H3v-2z" />
                    </svg>
                </i>
                <span class="header-mobile-button-text">Meny</span>
            </button>
        </div> 
    </div>
</header>
